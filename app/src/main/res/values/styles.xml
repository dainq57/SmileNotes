<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--Toolbar-->
    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!--Spinner-->
    <style name="Winset.Spinner" parent="@android:style/Theme.Material.Light">
        <item name="android:textAppearance">@style/TextAppearance.Spinner</item>
        <item name="android:dropDownSelector">?android:attr/listChoiceBackgroundIndicator</item>
    </style>

    <style name="Winset.Spinner.Popup" parent="@android:style/Theme.Material.Light">
        <item name="android:dropDownSelector">?android:attr/listChoiceBackgroundIndicator</item>
    </style>

    <!--Create-->
    <style name="TextTitleStepCreate">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--TextAppearance-->
    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Spinner">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#252525</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Spinner.AppBar">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.WinsetDropDownItem">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/bg_dropdown_selector</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="EditText">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/bg_edit_text_border</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="EditText.Big">
        <item name="android:gravity">start</item>
    </style>

    <style name="TextAppearance.WinsetDropDownItem.Selected">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="customRatingBar"
           parent="android:style/Widget.Material.RatingBar.Small">
    </style>
</resources>
