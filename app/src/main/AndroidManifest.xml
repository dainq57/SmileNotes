<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nq.dai.smilenotes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name="com.example.dainq.smilenotes.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.example.dainq.smilenotes.ui.create.CreateActivity">
        </activity>
        <activity android:name="com.example.dainq.smilenotes.ui.customer.ListCustomerActivity">
        </activity>
        <activity android:name="com.example.dainq.smilenotes.ui.customer.ProfileActivity">
        </activity>

        <receiver
            android:name="com.example.dainq.smilenotes.ui.notifications.AlarmBootReceiver"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.example.dainq.smilenotes.ui.notifications.NotificationReceiver"
            android:enabled="true"
            android:exported="false">
        </receiver>
    </application>

</manifest>